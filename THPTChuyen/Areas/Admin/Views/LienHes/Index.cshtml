@model IEnumerable<THPTChuyen.Models.LienHe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Liên hệ</h2>

<table class="table">
    <tr>
        <th>
            Email
        </th>
        <th>
            Điện thoại
        </th>
        <th>
            Địa chỉ
        </th>
        <th>
            Facebook
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DiaChi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FaceBook)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaLienHe })
        </td>
    </tr>
}

</table>
