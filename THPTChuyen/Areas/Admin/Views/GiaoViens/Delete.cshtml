@model THPTChuyen.Models.GiaoVien

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h3>Bạn có chắc chăn muốn xóa không?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên:  @Html.DisplayFor(model => model.TenGiaoVien)
        </dt>
        <dt>
            <img src="~/UploadFile/Image/@Html.DisplayFor(model => model.avatar)" style="height:300px; width: 400px" />
        </dt>
        <dt>
            Ngày sinh: @Html.DisplayFor(model => model.NgaySinh)
        </dt>
        <dt>
            Quê quán: @Html.DisplayFor(model => model.QueQuan)
        </dt>

        <dt>
            Địa chỉ: @Html.DisplayFor(model => model.DiaChi)
        </dt>

        <dt>
            Điện thoại: @Html.DisplayFor(model => model.SDT)
        </dt>

        <dt>
            @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
        </dt>

        <dt>
            Tốt nghiệp: @Html.DisplayFor(model => model.TotNghiep)
        </dt>

        <dt>
            Chuyên ngành: @Html.DisplayFor(model => model.ChuyenNganh)
        </dt>

        <dt>
            Công tác năm: @Html.DisplayFor(model => model.CongTacNam)
        </dt>
        <dt>
            Chức vụ:  @Html.DisplayFor(model => model.ChucVu.TenChucVu)
        </dt>

        <dt>
            Tổ chức: @Html.DisplayFor(model => model.ToChuc.TenToChuc)
        </dt>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> &emsp;
            <button type="submit", class="btn btn-default">@Html.ActionLink("Trở về", "Index")</button>
            
        </div>
    }
</div>
