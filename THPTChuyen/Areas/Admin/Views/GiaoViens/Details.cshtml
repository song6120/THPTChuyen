@model THPTChuyen.Models.GiaoVien

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Giáo viên</h2>

<div>
    <h4>@Html.DisplayFor(model => model.TenGiaoVien)</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày sinh: @Html.DisplayFor(model => model.NgaySinh)
        </dt>
        <br />
        <dt>
            Quê quán: @Html.DisplayFor(model => model.QueQuan)
        </dt>
        <br />
        <dt>
            Địa chỉ: @Html.DisplayFor(model => model.DiaChi)
        </dt>
        <br />
        <dt>
            Điện thoại: @Html.DisplayFor(model => model.SDT)
        </dt>
        <br />
        <dt>
            @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(model => model.Email)
        </dt>
        <br />
        <dt>
            Tốt nghiệp năm: @Html.DisplayFor(model => model.TotNghiep)
        </dt>
        <br />
